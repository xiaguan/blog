---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
---

<header>
	<nav>
		<div class="header-left">
			<a href="/" class="site-title">{SITE_TITLE}</a>
		</div>
		<div class="header-right">
			<HeaderLink href="/blog">Blog</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
			<a href="https://github.com/xiaguan" target="_blank">GitHub</a>
		</div>
	</nav>
</header>
<style>
	header {
		padding: 1em;
		max-width: 720px;
		margin: 0 auto;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	.site-title {
		font-size: 1.3em;
		font-weight: 700;
		color: var(--text);
		text-decoration: none;
	}
	.site-title:hover {
		color: var(--link-hover);
		text-decoration: none;
	}
	.header-right {
		display: flex;
		gap: 1.2em;
	}
	.header-right a {
		color: var(--text);
		text-decoration: none;
		font-size: 0.95em;
	}
	.header-right a:hover {
		color: var(--link-hover);
	}
</style>
