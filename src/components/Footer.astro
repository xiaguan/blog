---
const today = new Date();
---

<footer>
	<div class="footer-content">
		<span>&copy; {today.getFullYear()} Jinyang Su</span>
		<span class="separator">&middot;</span>
		<a href="/rss.xml">RSS</a>
	</div>
</footer>
<style>
	footer {
		padding: 2em 1em;
		color: var(--text-light, #666);
		text-align: center;
		font-size: 0.85em;
		max-width: 720px;
		margin: 0 auto;
		border-top: 1px solid var(--border, #e8e8e8);
	}
	.footer-content {
		display: flex;
		justify-content: center;
		align-items: center;
		gap: 0.5em;
	}
	.separator {
		color: var(--border, #e8e8e8);
	}
	footer a {
		color: var(--text-light, #666);
		text-decoration: none;
	}
	footer a:hover {
		color: var(--link-hover, #0077cc);
	}
</style>
